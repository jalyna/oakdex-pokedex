  "required": [
    "names",
    "national_id",
    "types",
    "abilities",
    "gender_ratios",
    "catch_rate",
    "egg_groups",
    "hatch_time",
    "height_us",
    "height_eu",
    "weight_us",
    "weight_eu",
    "base_exp_yield",
    "leveling_rate",
    "ev_yield",
    "color",
    "base_friendship",
    "base_stats",
    "learnset"
